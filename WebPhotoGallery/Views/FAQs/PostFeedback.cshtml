@model FAQsViewModel
@{
    ViewData["Title"] = "Post a Question";
}
<div class="container d-flex justify-content-center align-items-center">
    <div class="col-md-6">
        <h2 class="text-center">Post a Question</h2>
        <form asp-action="PostFeedback" method="post">
            <div class="form-group">
                <label for="question">Question:</label>
                <textarea asp-for="@Model.Question" class="form-control"  required></textarea>
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>

            <div class="button-container">
                <button type="button" class="btn btn-secondary float-left" onclick="history.back()">Back</button>
                <button type="submit" class="btn btn-primary float-right">Submit</button>
            </div>
        </form>
    </div>
</div>

<style>
    .button-container {
        margin-top: 20px;
    }

    .float-left {
        float: left;
    }

    .float-right {
        float: right;
    }
</style>
