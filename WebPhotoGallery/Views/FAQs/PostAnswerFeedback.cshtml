@model FAQsAnswerViewModel
@{
    ViewData["Title"] = "Post Answer";
}

<style>
    .button-container {
        margin-top: 20px;
    }

    .float-left {
        float: left;
    }

    .float-right {
        float: right;
    }
</style>
<div class="container d-flex justify-content-center align-items-center">
    <div class="col-md-6">
        <h2 class="text-center">Post Answer </h2>
        <form asp-action="PostAnswerFeedback" asp-controller="FAQs" method="post" enctype="multipart/form-data">
            
            <div class="form-group">
                <label for="question">Question:</label>
                <textarea asp-for="@Model.Answer" class="form-control" required></textarea>
                <span asp-validation-for="Answer" class="text-danger"></span>
                <input hidden asp-route="Id" asp-for="@Model.QuestionID" class="form-control" />
            </div>

            <div class="button-container">
                <button type="button" class="btn btn-secondary float-left" onclick="history.back()">Back</button>
                <button type="submit" class="btn btn-primary float-right"  >Submit</button>
            </div>
        </form>
    </div>
</div>
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="toast bg-danger text-white" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Error</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @ViewBag.ErrorMessage
            </div>
        </div>
    }
</div>
@section Scripts 
{
    <script>
        $(document).ready(function () {
            $('.toast').toast('show');
        });
    </script>
}
