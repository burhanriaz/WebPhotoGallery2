@using Microsoft.AspNetCore.Identity;
@using WebPhotoGallery.Helper;
@inject SignInManager<ApplicationUser> _singInManger;
@inject RoleManager<IdentityRole> _roleManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebPhotoGallery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebPhotoGallery.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/jquery/dist/jquery.js" />
    <link rel="stylesheet" href="~/lib/jquery/dist/jquery.min.js" />
    <link rel="stylesheet" href="~/lib/jquery-validation/dist/jquery.validate.js" />
    <link rel="stylesheet" href="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebPhotoGallery</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                           
                         @if (_singInManger.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Picture" asp-action="Index">View Pictures</a>
                            </li>
                         @*   <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="ViewProfile">View Profile</a>
                            </li>*@
                        }

                        @if (User.IsInRole(Constant.Admin))
                        {
                            @if (_singInManger.IsSignedIn(User))
                            {
                                   <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Administrator" asp-action="Index"> Manage Users</a>
                                </li>
                            }
                        }
                                <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="FAQs" asp-action="Index">FAQs</a>
                            </li>
                              <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="FAQs" asp-action="Feedback">Feedback</a>
                            </li>
                           <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Picture" asp-action="AboutSite">About Site</a>
                            </li>  
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">ContactUs</a>
                            </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (_singInManger.IsSignedIn(User))
                        {
                        <li class="nav-item">
                                <a class="nabbar-link btn btn-outline-primary mx-2" asp-area="" asp-controller="Account" asp-action="ViewProfile">@User.Identity.Name</a>
                            </li>
                            <li>
                                <form asp-action="Logout" asp-controller="Account" method="post">
                                    <button type="submit" class="nabbar-link btn btn-outline-primary" value="Logout" name="Logout">Logout</button
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nabbar-link btn btn-outline-primary mx-2" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nabbar-link btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                       
                        }
                         
                        </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebPhotoGallery - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
