@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Access Denied</h3>
                    <p class="card-text">You do not have permission to access this resource.</p>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Go Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .card {
        border: 1px solid #ccc;
        box-shadow: 1px 1px 5px #ccc;
    }

    .card-title {
        font-weight: bold;
        margin-bottom: 10px;
        color: red; /* add red color to the card title */
    }

    .card-text {
        margin-bottom: 20px;
        color: red; /* add red color to the card text */
    }

    .fa-arrow-left {
        margin-right: 5px;
    }
</style>
