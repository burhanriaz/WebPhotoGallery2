@model WebPhotoGallery.Models.Pictures
@{
    ViewData["Title"] = "View Picture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row h-75">
        <div class="col-md-12">
            <img src="@Url.Content(Model.ImageUrl)" class="img-fluid" />
            <button type="button" class="btn btn-secondary" onclick="history.back()">Back</button>
            <button type="button" class="btn btn-danger"  data-bs-toggle="modal" data-bs-target="#exampleModal">Close</button>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Close Picture</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to close the picture?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="history.back()">Close Picture</button>
            </div>
        </div>
    </div>
</div>
